<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.settings.SettingsFragment"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/settings"
        style="@style/toolbar"
        app:navigationIcon="@drawable/icon_arrow_back"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toTopOf="@+id/bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_48dp"
                android:paddingTop="@dimen/_34dp"
                android:paddingBottom="@dimen/_5dp">
                <TextView
                    android:text="@string/sound"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="8dp"
                    app:drawableLeftCompat="@drawable/icon_sound"
                    android:gravity="center_vertical"/>
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/sound_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"/>
            </LinearLayout>

            <View
                android:background="?attr/colorSecondary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:layout_marginHorizontal="@dimen/_48dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_48dp"
                android:paddingVertical="@dimen/_5dp">
                <TextView
                    android:text="@string/music"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="8dp"
                    app:drawableLeftCompat="@drawable/icon_music"
                    android:gravity="center_vertical"/>
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/music_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"/>
            </LinearLayout>

            <View
                android:background="?attr/colorSecondary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:layout_marginHorizontal="@dimen/_48dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_48dp"
                android:paddingVertical="@dimen/_5dp">
                <TextView
                    android:text="@string/vibration"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="8dp"
                    app:drawableLeftCompat="@drawable/icon_vibration"
                    android:gravity="center_vertical"/>
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/vibration_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"/>
            </LinearLayout>

            <View
                android:background="?attr/colorSecondary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:layout_marginHorizontal="@dimen/_48dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_48dp"
                android:paddingVertical="@dimen/_5dp">
                <TextView
                    android:text="@string/error_limit"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="8dp"
                    app:drawableLeftCompat="@drawable/icon_error"
                    android:gravity="center_vertical"/>
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/error_limit_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_48dp">
                <TextView
                    android:text="@string/disable_error_limit"
                    android:textSize="@dimen/_11sp"
                    android:textColor="?attr/colorOnPrimaryVariant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="?attr/colorSecondary"
        android:padding="@dimen/_16dp"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/game_description"
            android:textSize="@dimen/_11sp"
            android:textColor="?attr/colorOnSecondary"
            android:gravity="center"/>
        <TextView
            android:id="@+id/go_to_google_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rate_app"
            android:textColor="?attr/colorLink"
            android:textSize="@dimen/_11sp"
            android:layout_marginTop="@dimen/_6dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>