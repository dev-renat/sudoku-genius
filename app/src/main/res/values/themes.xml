<resources>
    <style name="Theme.SudokuGenius" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="heading">
        <item name="android:textSize">@dimen/_25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/_20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="levelControlButton">
        <item name="android:layout_width">@dimen/_48dp</item>
        <item name="android:layout_height">@dimen/_48dp</item>
        <item name="android:background">@null</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:padding">@dimen/_10dp</item>
    </style>

    <style name="button">
        <item name="maxWidth">@dimen/_320dp</item>
        <item name="android:minHeight">@dimen/_48dp</item>
        <item name="android:layout_margin">@dimen/_4dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:padding">@dimen/_10dp</item>
    </style>

    <style name="buttonOutline" parent="button">
        <item name="android:background">@drawable/button_outline</item>
        <item name="android:textColor">@drawable/button_outline_text</item>
    </style>

    <style name="buttonOutlineSmall" parent="buttonOutline">
        <item name="android:minHeight">@dimen/_38dp</item>
    </style>

    <style name="buttonSolid" parent="button">
        <item name="android:background">@drawable/button_solid</item>
        <item name="android:textColor">@drawable/button_solid_text</item>
    </style>

    <style name="buttonSolidSmall" parent="buttonSolid">
        <item name="android:minHeight">@dimen/_38dp</item>
    </style>

    <style name="buttonImage">
        <item name="android:layout_margin">@dimen/_4dp</item>
        <item name="android:background">@null</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:padding">@dimen/_10dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="btnHandleInput" parent="button">
        <item name="android:padding">0dp</item>
        <item name="android:textSize">@dimen/_21sp</item>
    </style>
    <style name="btnDelete" parent="btnHandleInput">
    </style>


    <style name="buttonInput">
        <item name="android:background">@drawable/button_input</item>
<!--        <item name="android:minHeight">0dp</item>-->
<!--        <item name="android:maxHeight">0dp</item>-->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_margin">@dimen/_4dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_21sp</item>
    </style>

    <style name="buttonInputText">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_21sp</item>
    </style>
    <style name="buttonInputTextActive" parent="buttonInputText">
    </style>

    <style name="buttonDraft" parent="buttonInput">
        <item name="android:background">@drawable/button_circle</item>
    </style>
    <style name="buttonDraftActive" parent="buttonInput">
        <item name="android:background">@drawable/button_circle_active</item>
    </style>

    <style name="buttonControlIcon">
        <item name="android:layout_width">@dimen/_48dp</item>
        <item name="android:layout_height">@dimen/_48dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@drawable/button_circle</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:padding">@dimen/_10dp</item>
    </style>

    <style name="buttonRestartIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@null</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="buttonThemeIcon">
        <item name="android:layout_width">@dimen/_28dp</item>
        <item name="android:layout_height">@dimen/_28dp</item>
        <item name="android:background">@null</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_margin">@dimen/_4dp</item>
    </style>

    <style name="dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_dialog</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/_20dp</item>
    </style>
    <style name="dialogTitle">
        <item name="android:textSize">@dimen/_21sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/_20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
    </style>



    <style name="toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
        <item name="android:elevation">@dimen/_5dp</item>
    </style>
    <!-- Light Theme -->
    <style name="ThemeLight.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <!-- Dark Theme -->
    <style name="ThemeDark.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="list_number">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnPrimaryVariant</item>
        <item name="android:paddingEnd">@dimen/_16dp</item>
    </style>

    <style name="list_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
</resources>